<% session[:location] = current_user.homebase %>
<div id="expertise-form" class="ui raised very padded text container segment">
  <h2 class="ui dividing header">Edit booking</h2>
  <div class= "ui form">
    <%= form_tag(update_booking_path, method: :put) do %>
      <div class="field">
        <%= label_tag 'Tourist email' %>
        <%= text_field_tag :guest, User.find(@booking.guest_id).email%>
      </div>
      <div class="field">
        <%= label_tag 'Starting Location' %>
        <%= text_field_tag :meet_location, @booking.meet_location %>
      </div>
      <div class="field">
        <%= label_tag 'Start Time' %>
        <%= datetime_field_tag :start_time, :value => @booking.start_time.strftime("%Y-%m-%d") %>
      </div>
      <div class="field">
        <%= label_tag 'End Time' %>
        <%= datetime_field_tag :end_time, @booking.end_time %>
      </div>
      <div class="field">
        <%= label_tag 'Summary' %>
        <%= text_area_tag :summary, @booking.summary %>
        <%= hidden_field_tag :booking_id, @booking.id  %>
      </div>

      <%= submit_tag %>
    <% end %>
  </div>
</div>


